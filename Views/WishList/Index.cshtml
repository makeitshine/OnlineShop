@model Aurora.ViewModels.WishListViewModel

<div class="row checkoutForm">
    <h2>Избранное</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Количество</th>
                <th>Продукт</th>
                <th class="text-right">Цена</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.WishList.WishListItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.Product.Name</td>
                    <td class="text-right">@line.Product.Price.ToString("c")</td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="WishList" asp-action="RemoveFromWishList" asp-route-productId="@line.Product.ProductId">удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-right">
        <div class="btn-group ">
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Добавить больше продуктов<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Rings">Кольца</a></li>
                    <li><a asp-controller="Product" asp-action="List" asp-route-category="Braslets">Браслеты</a></li>
                </ul>
            </a>
        </div>
    </div>
</div>