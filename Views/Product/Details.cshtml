@model Product

    <div class="row">
        <div class="card">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h4 class="card-title">@Model.Name</h4>
                <!--Text-->
                <p class="card-text">@Model.LongDescription.</p>
                <p class="btn btn-group pull-right">
                    <a asp-controller="Product" asp-action="List" class="btn btn-default">Показать все продукты</a>
                    <a class="btn btn-dark" id="cartButton" asp-controller="Basket" asp-action="AddToBasket" asp-route-productId="@Model.ProductId">
                        В корзину
                    </a>
                      <a class="btn btn-dark" id="cartButton" asp-controller="WishList" asp-action="AddToWishList" asp-route-productId="@Model.ProductId">
                        В избранное
                    </a>
                </p>
              
            </div>
        </div>
    </div>
